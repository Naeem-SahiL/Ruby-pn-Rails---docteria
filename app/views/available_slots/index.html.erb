<p id="notice"><%= notice %></p>

<h1>Available Slots</h1>

<table>
  <thead>
    <tr>
      <th>Date from</th>
      <th>Date to</th>
      <th>Time from</th>
      <th>Time to</th>
      <th>Fees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @available_slots.each do |available_slot| %>
      <tr>
        <td><%= available_slot.date_from %></td>
        <td><%= available_slot.date_to %></td>
        <td><%= available_slot.time_from %></td>
        <td><%= available_slot.time_to %></td>
        <td><%= available_slot.fees %></td>
        <td><%= link_to 'Show', available_slot %></td>
        <td><%= link_to 'Edit', edit_available_slot_path(available_slot) %></td>
        <td><%= link_to 'Destroy', available_slot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Available Slot', new_available_slot_path %>
